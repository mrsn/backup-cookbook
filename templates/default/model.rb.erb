# encoding: utf-8

Backup::Model.new(:my_backup, '<%= @backup_description %>') do

  split_into_chunks_of <%= @chunk_size_in_mb %>

  archive :my_archive do |archive|
  <% @local_directories.each do |directory| %>
    archive.add "<%= directory %>"
  <% end %>
  end

<%= render "sftp_store_configuration.erb" %>

<%= render "zabbix_notifier.erb" %>

end
