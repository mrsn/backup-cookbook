  notify_by Zabbix do |zabbix|
    zabbix.on_success = true
    zabbix.on_warning = true
    zabbix.on_failure = true

    zabbix.zabbix_host  = "<%= @zabbix_host %>"
    zabbix.zabbix_port  = <%= @zabbix_port %>
    zabbix.service_name = "<%= @service_name %>"
    zabbix.service_host = "<%= @service_hostname %>"
    zabbix.item_key     = "<%= @item_key %>"
  end
