{
  "id": "model-ubuntu-1204_vagrantup_com",
  "split_into_chunks_of" : 250,
  "compress_with" : "Gzip",
  "encrypt_with" : {
    "GPG" : {
      "mode" : "symmetric",
      "passphrase" : "my_password"
    }
  },
  "archives" : {
    "kewl" : {  
       "add" : "/tmp/backup",
       "exclude" : ""
    },
    "v3ry_kewl" : {  
       "add" : "/tmp/backup1",
       "exclude" : ""
    },
   "n0t_v3ry_kewl" : {  
       "add" : "/tmp/backup2",
       "exclude" : "exclude-this.log"
    }
  },
  "storages": {
    "SFTP" :  {
      "username":"vagrant",
      "password":"vagrant",
      "ip":"1.2.3.4",
      "port" : 22,
      "path": "/var/backups",
      "keep": 5
    }
  },
  "databases" : {
    "MySQL" : {
      "name" : "my_database_name",
      "username" : "my_username",
      "password" : "my_password",
      "host" : "localhost",
      "port" : 3306,
      "skip_tables" : ["table1", "table2", "table3"],
      "only_tables" : ["zabbix"],
      "additional_options" : ["--quick", "--single-transaction"]
    },
    "PostgreSQL" : {
      "name" : "my_database_name",
      "username" : "my_username",
      "password" : "my_password",
      "host" : "localhost",
      "port" : 5432,
      "skip_tables" : [],
      "only_tables" : [],
      "additional_options" : []
    }
  },
  "notifiers" : {
    "Zabbix" : {
      "on_success" : true,
      "on_warning" : true,
      "on_failure" : true,
      "item_key" : "backup_status"
    }
  },
  "cron_job_schedule" : {
    "minute" : "*/2",
    "hour" : "*",
    "day" : "*",
    "month" : "*",
    "weekday" : "*"
  },
  "utilities" : {
    "pg_dump" : "/opt/chef-server/embedded/bin/pg_dump",
    "pg_dumpall" : "/opt/chef-server/embedded/bin/pg_dumpall"
  }
}
